
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Colegio - InnovaEdu</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    @RenderSection("Estilos", required: false)
    <script src="~/lib/fontawesome/all.js"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="#">InnovaEdu</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            @*  <div class="input-group">
            <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
            <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
            </div> *@
        </form>
        <!-- Navbar-->
        @await Component.InvokeAsync("MenuUsuario")
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @if (User.IsInRole("Administrador"))
                        {
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Dashboard
                            </a>
                        }
                        
                        <div class="sb-sidenav-menu-heading">Gestion</div>
                        @if (User.IsInRole("Administrador"))
                        {
                            <a class="nav-link" asp-controller="Usuario" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                Usuario
                            </a>
                            <a class="nav-link" asp-controller="Curso" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                Curso
                            </a>
                            <a class="nav-link" asp-controller="Docente" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                Docente
                            </a>
                            <a class="nav-link" asp-controller="DocenteHorario" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                Docente Horario
                            </a>
                        }
                        @if (User.IsInRole("Alumno"))
                        {
                            <a class="nav-link" asp-controller="Asesorias" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                Mis Asesorias
                            </a>
                            <a class="nav-link" asp-controller="HistorialAsesorias" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                Historial Asesorias
                            </a>
                        }

                        @if (User.IsInRole("Docente"))
                        {
                            <a class="nav-link" asp-controller="Asesorias" asp-action="AsesoriasAsignadas">
                                <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                Asesorias
                            </a>
                        }

                        @if (User.IsInRole("Recepcionista"))
                        {
                            <a class="nav-link" asp-controller="Asesorias" asp-action="AsesoriasAsignadas">
                                <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                Asesorias
                            </a>
                        }
                        
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">En linea</div>
                 
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">&copy; Copyright 2024 InnovaEdu</div>
                        <div>
                            <a href="#">Politica de privacidad</a>
                            &middot;
                            <a href="#">Terminos &amp; Condiciones</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/lib/sweetalert2/js/sweetalert2.js"></script>
    <script src="~/lib/loadingoverlay/loadingoverlay.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
